body
  padding 0
  margin 0
  overflow hidden
html,body,#app
  height 100%
.header
  display flex
  align-items center
  padding 10px 0
  position relative
  border-bottom 1px solid #eaecef
  .nav
    flex-grow 1
    height 50px
    line-height 50px
.el-main
  height 100%
  background #f2f2f2
  padding 14px
.page-code--child
  position relative
  height 100%
  &>div:first-child
    height 100%
.clearfix:after
  height 0
  display block
  clear both
  content ''
  overflow hidden
[class*=' el-icon-cc'],[class^='el-icon-cc']
  font-family 'iconfont' !important
  font-size 16px
  font-style normal
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
.el-menu
  border none
.el-menu--horizontal>.el-menu-item,.el-menu--horizontal>.el-submenu .el-submenu__title
  height 51px
  line-height 51px
.source
  padding 14px
.card-title
  color #404852
  margin-bottom 22px
  text-transform capitalize
.white-bg
  background #fff
.card
  margin-bottom 14px
.system-setting
  width 50px
  height 50px
  line-height 50px
  border-left 1px solid #e6e6e6
  text-align center
  cursor pointer
  margin-left 10px
  font-size 20px
.system-setting :hover
  background #e6e6e6
.setting_side
  height auto
  width 260px
  padding 20px
  box-sizing border-box
  background #fff
  color #333
  font-size 14px
  .layout
    padding 1px 0
  h5
    margin 0 0 14px
    font-size 14px
.tagnav_switch
  padding-bottom 14px
  margin-bottom 15px
  border-bottom 1px solid #EBEEF5
  font-size 14px
  line-height 28px
.group__mb
  margin-bottom 10px
.group__ml20
  margin-left 20px
.group__ml10
  margin-left 10px
.content-card.add-page
  height 100%
  // overflow auto
  // height 100vh
  padding-bottom 0
  box-sizing border-box
  display flex
  flex-direction column
  position absolute
  top 0px
  left 0px
  z-index auto
  width 100%
.content-card__footer
  height 50px
  line-height 50px
  background-color white
  border-top 1px solid #f0f0f0
  .sub-foot
    text-align right
    padding-right 50px
.content-card__main
  padding 14px !important
  flex 1
  overflow auto
.go-back
  i
    font-size 12px
.w100
  width 100%
.w50
  width 50%
.w30
  width 30%
.h100
  height 100%
.pb10
  padding-bottom 10px
.mt20
  margin-top 20px
.mr20
  margin-right 20px
.modelForm
  modelFormMixin()
.pro-app-menu
  height 100%
  overflow auto